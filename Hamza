	Three.setString("3");
	Three.setCharacterSize(25);
	Three.setFillColor(sf::Color(34, 93, 230));
	Three.Bold;
	Three.setPosition(sf::Vector2f(Numbersbuttons.getPosition().x + Numbersbuttons.getSize().x * 0.80, Numbersbuttons.getPosition().y + Numbersbuttons.getSize().y * 0.04));

	sf::Text Four;
	Four.setFont(sidefont);
	Four.setString("4");
	Four.setCharacterSize(25);
	Four.setFillColor(sf::Color(34, 93, 230));
	Four.Bold;
	Four.setPosition(sf::Vector2f(Numbersbuttons.getPosition().x + Numbersbuttons.getSize().x * 0.14, Numbersbuttons.getPosition().y + Numbersbuttons.getSize().y * 0.24));

	sf::Text Five;
	Five.setFont(sidefont);
	Five.setString("5");
	Five.setCharacterSize(25);
	Five.setFillColor(sf::Color(34, 93, 230));
	Five.Bold;
	Five.setPosition(sf::Vector2f(Numbersbuttons.getPosition().x + Numbersbuttons.getSize().x * 0.47, Numbersbuttons.getPosition().y + Numbersbuttons.getSize().y * 0.24));

	sf::Text Six;
	Six.setFont(sidefont);
	Six.setString("6");
	Six.setCharacterSize(25);
	Six.setFillColor(sf::Color(34, 93, 230));
	Six.Bold;
	Six.setPosition(sf::Vector2f(Numbersbuttons.getPosition().x + Numbersbuttons.getSize().x * 0.80, Numbersbuttons.getPosition().y + Numbersbuttons.getSize().y * 0.24));

	sf::Text Seven;
	Seven.setFont(sidefont);
	Seven.setString("7");
	Seven.setCharacterSize(25);
	Seven.setFillColor(sf::Color(34, 93, 230));
	Seven.Bold;
	Seven.setPosition(sf::Vector2f(Numbersbuttons.getPosition().x + Numbersbuttons.getSize().x * 0.14, Numbersbuttons.getPosition().y + Numbersbuttons.getSize().y * 0.44));

	sf::Text Eight;
	Eight.setFont(sidefont);
	Eight.setString("8");
	Eight.setCharacterSize(25);
	Eight.setFillColor(sf::Color(34, 93, 230));
	Eight.Bold;
	Eight.setPosition(sf::Vector2f(Numbersbuttons.getPosition().x + Numbersbuttons.getSize().x * 0.47, Numbersbuttons.getPosition().y + Numbersbuttons.getSize().y * 0.44));

	sf::Text Nine;
	Nine.setFont(sidefont);
	Nine.setString("3");
	Nine.setCharacterSize(25);
	Nine.setFillColor(sf::Color(34, 93, 230));
	Nine.Bold;
	Nine.setPosition(sf::Vector2f(Numbersbuttons.getPosition().x + Numbersbuttons.getSize().x * 0.80, Numbersbuttons.getPosition().y + Numbersbuttons.getSize().y * 0.44));

	sf::Text Star;
	Star.setFont(sidefont);
	Star.setString("*");
	Star.setCharacterSize(35);
	Star.setFillColor(sf::Color(34, 93, 230));
	Star.Bold;
	Star.setPosition(sf::Vector2f(Numbersbuttons.getPosition().x + Numbersbuttons.getSize().x * 0.14, Numbersbuttons.getPosition().y + Numbersbuttons.getSize().y * 0.64));

	sf::Text Zero;
	Zero.setFont(sidefont);
	Zero.setString("0");
	Zero.setCharacterSize(25);
	Zero.setFillColor(sf::Color(34, 93, 230));
	Zero.Bold;
	Zero.setPosition(sf::Vector2f(Numbersbuttons.getPosition().x + Numbersbuttons.getSize().x * 0.47, Numbersbuttons.getPosition().y + Numbersbuttons.getSize().y * 0.64));

	sf::Text Hash;
	Hash.setFont(sidefont);
	Hash.setString("#");
	Hash.setCharacterSize(25);
	Hash.setFillColor(sf::Color(34, 93, 230));
	Hash.Bold;
	Hash.setPosition(sf::Vector2f(Numbersbuttons.getPosition().x + Numbersbuttons.getSize().x * 0.80, Numbersbuttons.getPosition().y + Numbersbuttons.getSize().y * 0.64));


	while (window.isOpen())
	{
		sf::Event event;
		while (window.pollEvent(event))
		{
			if (event.type == sf::Event::Closed)
				window.close();
		}

		window.clear(sf::Color::White);
		window.draw(PhoneBackground);
		window.draw(Contactsdisplay);
		window.draw(Numberdisplay);
		window.draw(fade1);
		window.draw(fade2);
		window.draw(Numbersbuttons);
		window.draw(cross);
		window.draw(one);
		window.draw(two);
		window.draw(three);
		window.draw(four);
		window.draw(five);
		window.draw(six);
		window.draw(seven);
		window.draw(eight);
		window.draw(nine);
		window.draw(star);
		window.draw(zero);
		window.draw(hash);
		window.draw(Cross);
		window.draw(One);
		window.draw(Two);
		window.draw(Three);
		window.draw(Four);
		window.draw(Five);
		window.draw(Six);
		window.draw(Seven);
		window.draw(Eight);
		window.draw(Nine);
		window.draw(Star);
		window.draw(Zero);
		window.draw(Hash);
		window.draw(callbuttonsprite);
