	six.setPosition(sf::Vector2f(Numbersbuttons.getPosition().x + Numbersbuttons.getSize().x * 0.66, Numbersbuttons.getPosition().y + Numbersbuttons.getSize().y * 0.20));
	six.setFillColor(sf::Color::Transparent);

	sf::RectangleShape seven(sf::Vector2f(Numbersbuttons.getSize().x * 0.33, Numbersbuttons.getSize().y * 0.20));
	seven.setPosition(sf::Vector2f(Numbersbuttons.getPosition().x, Numbersbuttons.getPosition().y + Numbersbuttons.getSize().y * 0.40));
	seven.setFillColor(sf::Color::Transparent);

	sf::RectangleShape eight(sf::Vector2f(Numbersbuttons.getSize().x * 0.33, Numbersbuttons.getSize().y * 0.20));
	eight.setPosition(sf::Vector2f(Numbersbuttons.getPosition().x + Numbersbuttons.getSize().x * 0.33, Numbersbuttons.getPosition().y + Numbersbuttons.getSize().y * 0.40));
	eight.setFillColor(sf::Color::Transparent);

	sf::RectangleShape nine(sf::Vector2f(Numbersbuttons.getSize().x * 0.34, Numbersbuttons.getSize().y * 0.20));
	nine.setPosition(sf::Vector2f(Numbersbuttons.getPosition().x + Numbersbuttons.getSize().x * 0.66, Numbersbuttons.getPosition().y + Numbersbuttons.getSize().y * 0.40));
	nine.setFillColor(sf::Color::Transparent);

