	PhoneBackground.setOutlineColor(sf::Color::Magenta);
	PhoneBackground.setFillColor(sf::Color::White);
	
	sf::RectangleShape Contactsdisplay(sf::Vector2f(PhoneBackground.getSize().x, PhoneBackground.getSize().y * 0.40));
	Contactsdisplay.setPosition(sf::Vector2f(PhoneBackground.getPosition()));
	Contactsdisplay.setFillColor(sf::Color::Transparent);

	sf::RectangleShape Numberdisplay(sf::Vector2f(PhoneBackground.getSize().x, PhoneBackground.getSize().y * 0.10));
	Numberdisplay.setPosition(PhoneBackground.getPosition().x , PhoneBackground.getPosition().y + PhoneBackground.getSize().y * 0.40);
	Numberdisplay.setFillColor(sf::Color::Transparent);

