	star.setPosition(sf::Vector2f(Numbersbuttons.getPosition().x, Numbersbuttons.getPosition().y + Numbersbuttons.getSize().y * 0.60));
	star.setFillColor(sf::Color::Transparent);

	sf::RectangleShape zero(sf::Vector2f(Numbersbuttons.getSize().x * 0.33, Numbersbuttons.getSize().y * 0.20));
