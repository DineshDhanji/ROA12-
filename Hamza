	One.setPosition(sf::Vector2f(Numbersbuttons.getPosition().x + Numbersbuttons.getSize().x * 0.14, Numbersbuttons.getPosition().y + Numbersbuttons.getSize().y * 0.04));

	sf::Text Two;
	Two.setFont(sidefont);
	Two.setString("2");
	Two.setCharacterSize(25);
	Two.setFillColor(sf::Color(34, 93, 230));
